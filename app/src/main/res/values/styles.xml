<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewCompletePurchase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_50</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableLeft">@drawable/ic_filter</item>
        <item name="android:drawableStart">@drawable/ic_filter</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextViewFinalStep">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_50</item>
        <item name="android:background">@drawable/gradient_white_radius</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="RegistrationLayout">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_white_radius</item>
    </style>

    <style name="RegistrationEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_50</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/blue_grey_100</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextHintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonLogInByProvider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_50</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/gradient_white_radius</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGreen" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim_50</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/gradient_radius_green</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CustomTextInputLayoutStyle.ErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
    </style>
    <!--<android.support.design.widget.TextInputLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:errorTextAppearance="@style/CustomTextInputLayoutStyle.ErrorTextStyle">-->

    <style name="AddressEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/blue_grey_100</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/grey_700</item>
        <item name="android:textColorHint">@color/blue_grey_100</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="SpaceView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
