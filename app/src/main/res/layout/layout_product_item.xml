<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/blue_grey_100"
        app:layout_constraintBottom_toTopOf="@+id/tv_receive_the_order"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_product_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="start"
        android:textColor="@color/blue_grey_100"
        tools:text="Kenwood" />

    <TextView
        android:id="@+id/tv_desc_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="start"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Kitchen Machine Mixer" />

    <TextView
        android:id="@+id/tv_product_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textSize="12sp"
        android:gravity="start"
        android:textStyle="normal"
        tools:text="Promo" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="start"
        android:layout_gravity="start"
        android:textColor="@color/green_700"
        android:textStyle="bold"
        tools:text="15 $" />

</LinearLayout>