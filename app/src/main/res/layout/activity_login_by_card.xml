<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.activity.LoginByCardActivity">

    <FrameLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/background_full_green"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="Enter card number"
            android:background="@drawable/gradient_white_radius"
            android:gravity="center"
            android:hint="Enter your Card Number here"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_happy_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/txt_image_logo_toolbar"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_waffir" />

    </FrameLayout>


    <Button
        android:id="@+id/btn_return_home_page"
        style="@style/ButtonGreen"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="log in" />
</LinearLayout>